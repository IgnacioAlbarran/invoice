= form_for @invoice_line do |f|
  - if @invoice_line.errors.any?
    #error_explanation
      h2 = "#{pluralize(@invoice_line.errors.count, "error")} prohibited this invoice_line from being saved:"
      ul
        - @invoice_line.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :Producto
    br
    = f.text_field :product
  .field
    = f.label :Cantidad
    br
    = f.number_field :quantity
  .field
    = f.label :Precio
    br
    = f.number_field :price
  .field
    = f.hidden_field :invoice_header_id, value: @invoice_header.id

    p
  .actions = f.submit 'Guardar'
